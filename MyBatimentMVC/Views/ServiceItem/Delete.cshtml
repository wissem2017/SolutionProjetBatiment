@model ServiceItemViewModel

@{
    ViewData["Title"] = "Supprimer Service";
}

<div style="margin:160px;">
    <h2>Delete</h2>

    <h3>Voulez-vous vraiment le supprimer?</h3>
    <div>
        <h4>ServiceItem</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ServiceName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ServiceName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Image)
            </dt>
            <dd>
                <img src="~/img/services/@Model.Image" class="img-thumbnail" style="width:200px; height:200px;" />
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Supprimer" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-default">Retour à la liste</a>
        </form>
    </div>

</div>

